#include <stdio.h>
#include <stdlib.h>

int main() {

    char pais1[] = "Brasil";
    int populacao1 = 214000000;
    float area1 = 8515767.0;
    float pib1 = 1868.0;
    float densidade1 = 25.1;

    char pais2[] = "Canada";
    int populacao2 = 38000000;
    float area2 = 9984670.0;
    float pib2 = 1990.0;
    float densidade2 = 4.2;

    int atributo1, atributo2;

    printf("===== SUPER TRUNFO - NIVEL AVANCADO =====\n\n");

    printf("Escolha o PRIMEIRO atributo:\n");
    printf("1 - Populacao\n");
    printf("2 - Area\n");
    printf("3 - PIB\n");
    printf("4 - Densidade Demografica\n");
    printf("Opcao: ");
    scanf("%d", &atributo1);

    if (atributo1 < 1 || atributo1 > 4) {
        printf("Opcao invalida!\n");
        return 0;
    }

    printf("\nEscolha o SEGUNDO atributo:\n");

    if (atributo1 != 1) printf("1 - Populacao\n");
    if (atributo1 != 2) printf("2 - Area\n");
    if (atributo1 != 3) printf("3 - PIB\n");
    if (atributo1 != 4) printf("4 - Densidade Demografica\n");

    printf("Opcao: ");
    scanf("%d", &atributo2);

    if (atributo2 < 1 || atributo2 > 4 || atributo2 == atributo1) {
        printf("Opcao invalida!\n");
        return 0;
    }

    float valor1_carta1, valor1_carta2;
    float valor2_carta1, valor2_carta2;

    char nomeAttr1[30];
    char nomeAttr2[30];

    switch (atributo1) {
        case 1:
            valor1_carta1 = populacao1;
            valor1_carta2 = populacao2;
            sprintf(nomeAttr1, "Populacao");
            break;
        case 2:
            valor1_carta1 = area1;
            valor1_carta2 = area2;
            sprintf(nomeAttr1, "Area");
            break;
        case 3:
            valor1_carta1 = pib1;
            valor1_carta2 = pib2;
            sprintf(nomeAttr1, "PIB");
            break;
        case 4:
            valor1_carta1 = densidade1;
            valor1_carta2 = densidade2;
            sprintf(nomeAttr1, "Densidade Demografica");
            break;
        default:
            printf("Erro!\n");
            return 0;
    }

    switch (atributo2) {
        case 1:
            valor2_carta1 = populacao1;
            valor2_carta2 = populacao2;
            sprintf(nomeAttr2, "Populacao");
            break;
        case 2:
            valor2_carta1 = area1;
            valor2_carta2 = area2;
            sprintf(nomeAttr2, "Area");
            break;
        case 3:
            valor2_carta1 = pib1;
            valor2_carta2 = pib2;
            sprintf(nomeAttr2, "PIB");
            break;
        case 4:
            valor2_carta1 = densidade1;
            valor2_carta2 = densidade2;
            sprintf(nomeAttr2, "Densidade Demografica");
            break;
        default:
            printf("Erro!\n");
            return 0;
    }

    float soma1 = valor1_carta1 + valor2_carta1;
    float soma2 = valor1_carta2 + valor2_carta2;

    printf("\n===== RESULTADO =====\n\n");

    printf("%s vs %s\n\n", pais1, pais2);

    printf("%s:\n", nomeAttr1);
    printf("%s: %.2f\n", pais1, valor1_carta1);
    printf("%s: %.2f\n\n", pais2, valor1_carta2);

    printf("%s:\n", nomeAttr2);
    printf("%s: %.2f\n", pais1, valor2_carta1);
    printf("%s: %.2f\n\n", pais2, valor2_carta2);

    printf("Soma dos atributos:\n");
    printf("%s: %.2f\n", pais1, soma1);
    printf("%s: %.2f\n\n", pais2, soma2);

    if (soma1 > soma2)
        printf("Vencedor: %s\n", pais1);
    else if (soma2 > soma1)
        printf("Vencedor: %s\n", pais2);
    else
        printf("Empate!\n");

    return 0;
}
